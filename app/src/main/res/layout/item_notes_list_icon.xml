<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="background"
            type="Integer" />

        <variable
            name="letter"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/notesListItemIconSize"
        android:layout_height="@dimen/notesListItemIconSize"
        android:background="@drawable/notes_list_item_icon_background"
        android:backgroundTint="@{context.resources.getColor(background)}"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{letter}"
            android:textColor="@color/white"
            android:textSize="@dimen/notesListItemLetterSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text='A' />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>